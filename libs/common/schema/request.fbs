table Event {
  id:[ubyte];
  type:uint16;
  aggregate_id:[ubyte];
  aggregate_version:uint32;
  body:[ubyte];
  meta:[ubyte];
}

table InsertEventRequestBody {
  event:Event;
}

table ListAggregateEventsRequestBody {
  aggregate_id:[ubyte];
  aggregate_version:uint32;
  limit:uint32;
}

union RequestBody {
  InsertEvent:InsertEventRequestBody,
  ListAggregateEvents:ListAggregateEventsRequestBody
}

table Request {
  body:RequestBody;
}

root_type Request;
